<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="Портал DostFilms.ru — это проект для настоящих ценителей кино, где вы сможете смотреть фильмы и сералы онлайн в хорошем качестве HD 720p, причем совершенно бесплатно.">
    <meta property="og:title" content=" @ViewBag.Title ">
    <meta property="og:type" content="article">
    <meta name="keywords" content="DostFilms, Онлайн сериалы, Онлайн смотреть фильмы, фильмы онлайн">
    <meta name="keywords" content="смотреть, фильмы, онлайн, хорошем, HD, качестве, HD 720p, бесплатно">
    <meta property="og:description" content="Портал DostFilms.ru — это проект для настоящих ценителей кино, где вы сможете смотреть фильмы и сералы онлайн в хорошем качестве HD 720p, причем совершенно бесплатно.">
    <meta property="og:url" content="https://DostFilms.ru">
    <link rel="icon" href="~/image/ServiceImg/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <!--[if lt IE 9]>
     <script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body id="top">
        <header class="header">
            <div class="container">
                <div class="logo">
                    <a href='@Url.Action("Index", "Home", null)'><img src="~/image/ServiceImg/logo_new_4.png" title="DostFilms.ru - самый лучший онлайн кинотеатр!" alt=""></a>
                </div>
                <div class="navigation">
                    <div class="search">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "search" }))
                        {
                            <input type="text" name="inputSearch" id="inputSearch" title="Search" class="inputSearch" placeholder="Поиск по сайту...">
                            <input id="btnSearch" type="submit" name="submit" class="btnSearch" value=" Поиск">
                        }
                    </div>
                    <div class="menu">
                        <ul>
                            <li>@Html.ActionLink("Новинки", "newsMovie", "Home", null, new { @class = "item-nav" })<span>|</span></li>
                            <li><a href="#" class="item-nav">Премьеры</a><span>|</span></li>
                            <li><a href="#" class="item-nav">Навигатор</a><span>|</span></li>
                            <li> @Html.ActionLink("Случайные", "random", "Home", null, new { @class = "item-nav" })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer class="footer">
            <div class="container">
                <div class="info">
                    <p> ©&nbsp;<a href='@Url.Action("Index", "Home")'>DostFilms.ru</a> - мы самый лучший онлайн кинотеатр!</p>
                </div>
                <div class="info-link">
                    <p>
                        @Html.ActionLink("Пользователю", "Faq", "Home") ♦ @Html.ActionLink("Правообладателям", "Rights", "Home") ♦ @Html.ActionLink("Контакты", "Contact", "Home")
                    </p>
                </div>
            </div>
        </footer>
        <div class="btn-top"><a href="#top"><img src="~/image/ServiceImg/up-arrow.svg" alt=""></a></div>
    @Scripts.Render("~/bundles/js")
    @*
        @RenderSection("scripts", required: false)*@
</body>
</html>
